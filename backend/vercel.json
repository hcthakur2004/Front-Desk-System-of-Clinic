{
  "version": 2,
  "builds": [
    { "src": "dist/main.js", "use": "@vercel/node" }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "dist/main.js"
    }
  ],
  "env": {
    "DB_HOST": "your-db-host",
    "DB_USER": "your-db-user",
    "DB_PASS": "your-db-password",
    "DB_NAME": "hospital_db"
  }
}
